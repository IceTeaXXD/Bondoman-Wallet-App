<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bondoman.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_transactions"
        android:name="com.example.bondoman.ui.transactions.TransactionsFragment"
        android:label="@string/title_transactions"
        tools:layout="@layout/fragment_transactions" >
        <action
            android:id="@+id/action_navigation_transactions_to_transactionAdd"
            app:destination="@id/transactionAdd" />
    </fragment>

    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.example.bondoman.ui.scan.ScanFragment"
        android:label="@string/title_scan"
        tools:layout="@layout/fragment_scan" />

    <fragment
        android:id="@+id/navigation_graph"
        android:name="com.example.bondoman.ui.graph.GraphFragment"
        android:label="@string/title_graph"
        tools:layout="@layout/fragment_graph" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.bondoman.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/transactionAdd"
        android:name="com.example.bondoman.ui.transactions.TransactionAdd"
        android:label="TransactionAdd"
        tools:layout="@layout/fragment_add_transaction">
        <action
            android:id="@+id/action_transactionAdd_to_navigation_transactions"
            app:destination="@id/navigation_transactions" />
    </fragment>

</navigation>